---
// src/components/ProjectCard.astro
const { project } = Astro.props;
---

<article class="
  bg-white dark:bg-black
  rounded-lg 
  shadow-md hover:shadow-xl 
  transition-shadow duration-300 
  border border-gray-200 dark:border-gray-700
  group relative
">
  <img 
    src={project.image} 
    alt={project.title} 
    class="w-full h-2/5 object-cover p-2"
  />
  
  <div class="p-6 h-1/2">
    <h3 class="text-xl font-bold mb-2 text-headline dark:text-headline-dark">
      {project.title}
    </h3>
    <p class="text-paragraph opacity-75 dark:text-paragraph-dark mb-4">
      {project.description}
    </p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {project.tags.map((tag: string) => (
        <span class="
          bg-button/20 dark:bg-button-dark/20
          text-button dark:text-button-dark
          text-xs px-3 py-1 rounded-full font-bold
        ">
          {tag}
        </span>
      ))}
    </div>
  </div>
  <div class="flex justify-start h-1/10 items-center p-4">
    {project.link && 
      <a 
        href={project.link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="
          inline-block 
          px-4 py-2 mx-2
        hover:bg-button 
          dark:bg-button-dark dark:hover:bg-button-dark dark:text-headline-dark
          hover:text-headline dark:hover:text-headline-dark text-button box-border-2 border-blue-50
          rounded-md shadow-sm hover:dark:shadow-button-dark
          transition-colors
        "
      >
        Deploy
      </a>
    }
    {project.source && 
      <a
        href={project.source}
        target="_blank"
        rel="noopener noreferrer"
        class="
          inline-flex items-center justify-center
          px-4 py-2
        hover:bg-gray-700
          dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white
          hover:text-white text-gray-700 box-border-2 border-gray
          rounded-md
          shadow-sm
          transition-colors duration-200
          group
        "
      >
        <svg
          class="w-5 h-5 mr-2 transition-transform"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"
          />
        </svg>
        Code
      </a>
    }
  </div>
</article>