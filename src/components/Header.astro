---
// src/components/Header.astro
// Ensure the correct path to the image file
import MILOGOIG from '../assets/MILOGOIG.png';
const menuItems = [
  { name: 'Start', id: 'home' },
  { name: 'Projects', id: 'projects' },
  { name: 'About me', id: 'about' },
  { name: 'Contact', id: 'contact' }
];
---

<header class="fixed top-0 w-full bg-background dark:bg-background-dark dark:shadow-white z-50 shadow-sm transition-colors duration-300">
  <nav class="container mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center h-16 md:h-20">
      <div class="flex items-center">
        <img src={MILOGOIG.src} alt="Logo" class="h-10 w-10 rounded-md mr-2" />
        {/* Logo */}
        <a href="#home" class="flex items-center text-xl font-bold text-headline dark:text-headline-dark hover:text-button dark:hover:text-button-dark transition-colors">
          <span>Javigsz's Portfolio</span>
        </a>
      </div>
      {/* Menú desktop */}
      <ul class="hidden md:flex space-x-1">
        {menuItems.map(item => (
          <a
            href={`#${item.id}`}
            class="block px-3 py-2 rounded-md text-base font-medium text-headline dark:text-headline-dark hover:bg-button dark:hover:bg-button-dark transition-colors"
          >
    {item.name}
  </a>
))}
      </ul>

      {/* Botón móvil */}
      <button 
        class="md:hidden p-2 rounded-md text-headline dark:text-headline-dark hover:bg-button dark:hover:bg-button-dark focus:outline-none"
        id="mobile-menu-button"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    {/* Menú móvil */}
    <div class="md:hidden hidden mobile-menu" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {menuItems.map(item => (
          <a
            href={`#${item.id}`}
            class="block px-3 py-2 rounded-md text-base font-medium text-headline dark:text-headline-dark hover:bg-button dark:hover:bg-button-dark transition-colors"
          >
    {item.name}
  </a>
))}
      </div>
    </div>
  </nav>
</header>

<!-- @ts-ignore -->
<script is:client>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuButton) {
    menuButton.addEventListener('click', () => {
      if (mobileMenu) {
        mobileMenu.classList.toggle('hidden');
        mobileMenu.classList.toggle('block');
      }
    // If the menu is open, always leave the button open
    });
  }

  
</script>

